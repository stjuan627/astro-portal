---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { relatedGames } from '../data/relatedGames';

console.debug('[Index] Loading related games:', relatedGames.length);
---

<Layout title="Drive Mad - Mini Game Portal">
  <div class="hero min-h-[50vh] bg-base-200 rounded-lg">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold">Drive Mad</h1>
        <p class="py-6">开始你的赛车冒险吧!</p>
        <button class="btn btn-primary">开始游戏</button>
      </div>
    </div>
  </div>

  <section class="container mx-auto px-4 py-12">
    <h2 class="mb-8 text-2xl font-bold">相关游戏推荐</h2>
    
    <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6">
      {relatedGames.map(game => (
        <Card
          title={game.title}
          imageUrl={game.imageUrl}
          rating={game.rating}
          badge={game.badge}
          href={`/games/${game.id}`}
        />
      ))}
    </div>
  </section>
</Layout>
